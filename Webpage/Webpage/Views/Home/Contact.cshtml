        @foreach (var item in Model)
        {
            <article class="col-lg-4 col-md-6">
                @if (item.ImagePath != null || item.ImagePath == "")
                {
                    string temp = "~/images/Contact/" + item.ImagePath;
                    <img src="@Url.Content(temp)" alt="Alternate Text" />
                }
                <br />
                <strong style="font-size:16px">@item.Name</strong>
                <p style="font-size:12px">@item.Posistion</p>
                <p style="font-size:12px">@item.Phone</p>
                <p style="font-size:12px">@item.Email</p>
            </article>
        }
    </section>

    <section class="" style="float:left">
        <form>
            <label>Name</label>
            <input name="name" placeholder="Type Here" />

            <label>Email</label>
            <input name="email" type="email" placeholder="Email" />

            <label>Message</label>
            <textarea name="message" placeholder="Type Here"></textarea>

            <input type="submit" id="submit" name="submit" value="Submit" />
        </form>
    </section>
    <address>
        HRM Engineering<br />
        Eriksbergstorget 11<br />
        <abbr title="Phone">P:</abbr>
        425.555.0100
    </address>

</section>